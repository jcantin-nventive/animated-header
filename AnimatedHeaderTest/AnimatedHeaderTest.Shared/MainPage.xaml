<Page x:Class="AnimatedHeaderTest.MainPage"
	  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	  xmlns:local="using:AnimatedHeaderTest"
	  xmlns:u="using:Umbrella.View.Controls"
	  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	  mc:Ignorable="d">

	<Page.DataContext>
		<local:MyViewModel />
	</Page.DataContext>

	<Grid>
		<ScrollViewer>
			<StackPanel>
				<!-- Content section -->
				<StackPanel Margin="16,16,16,0">

					<!-- Title -->
					<TextBlock Text="{Binding Parent[ClubTitle]}" />

					<!-- Summary -->
					<TextBlock Text="{Binding Data.Member.Summary}"
							   Margin="0,16,0,0" />

					<!-- Content -->
					<!-- TODO (Task #170958) : Use a HTML view -->
					<TextBlock Text="{Binding Data.Member.Content}"
							   Margin="0,24" />
					<Border Height="600"
							Width="100"
							Background="Pink" />

					<!-- Question label -->
					<TextBlock Text="Questions on this or any other automotive question?" />

					<!-- External navigation button -->
					<Button Command="{Binding Parent[OpenExternalLink]}"
							Content="Find out more online"
							Margin="0,16" />
				</StackPanel>
			</StackPanel>
		</ScrollViewer>
	</Grid>
</Page>
